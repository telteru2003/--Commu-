  <h3>グループ一覧</h3>
  <div class="container">
    <table class="table">
      <thead>
        <tr style="background-color: #EEEEEE;">
            <th>ID</th>
            <th>グループ名</th>
            <th>作成者</th>
            <th>メンバー数</th>
            <th>作成日時</th>
            <th></th>
        </tr>
      </thead>

      <tbody>
        <% @families.each do |family| %>
         <tr>
          <td class="info col-xs-1">
            <%= family.id %>
          </td>
          <td class="text-left">
            <%= family.name %>
          </td>
          <td class="text-left">
            <%= family.owner.nickname.present? ? family.owner.nickname : family.owner.name %>
          </td>
          <td class="text-left">
            <%= family.family_users.count + 1 %>
          </td>
          <td class="text-left">
            <%= content_tag(:span, family.created_at.strftime("%Y年%m月%d日 %H時%M分")) %>
          </td>
          <td class="col-xs-2">
            <%= link_to "削除", admin_family_path(family), method: :delete, data: { confirm: '削除します。 よろしいですか？' }, class: "btn btn-danger" %>
          </td>
         </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to "TOPに戻る", admin_homes_path, class:"btn btn-info ml-1"%>

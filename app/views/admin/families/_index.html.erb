    <table class="table">
      <thead>
        <tr style="background-color: #EEEEEE;">
            <th>ID</th>
            <th>グループ名</th>
            <th>作成者</th>
            <th>メンバー数</th>
            <th></th>
        </tr>
      </thead>

      <tbody>
        <% families.each do |family| %>
         <tr>
          <td class="info col-xs-1">
            <%= family.id %>
          </td>
          <td class="text-left">
            <%= family.name %>
          </td>
          <td class="text-left">
            <%= family.owner.name %>
          </td>
          <td class="text-left">
            <%= family.family_users.count %>
          </td>
          <td class="col-xs-2">
            <%= link_to "削除", admin_family_path(family), method: :delete, data: { confirm: '削除します。 よろしいですか？' }, class: "btn btn-danger" %>
          </td>
         </tr>
        <% end %>
      </tbody>
    </table>
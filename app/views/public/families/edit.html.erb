<div class="container">
  <h2 style="padding: 10px; margin: 10px;" class="font-weight-bold my-5"><span style="background-color: #EEEEEE">　  グループ情報編集　</span></h2>
  <div class="row">
    <%= form_with model: @family, url: family_path(@family), method: :patch, local: true do |f| %>

    <div class="col-xs-12">

      <div class="form-group row">
        <%= f.label :"名前",class:"col-4" %>
        <%= f.text_field :name, class:"col-8" %>
      </div>

      <div>
      　<%= f.submit "　編集内容を保存　",class:"btn btn-success mr-5" %>
      <% end %>
      <%= link_to 'グループ削除', family_path(@family), method: :delete, class: "btn btn-danger", data: { confirm: "グループ削除します。 よろしいですか？" } %>
      </div>

    </div>
  </div>
</div>
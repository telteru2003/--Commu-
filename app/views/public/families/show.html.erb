<div class="container">
  <h2 style="padding: 10px; margin: 10px;" class="font-weight-bold my-5">
    <span style="background-color: #EEEEEE">　<%= @family.name %> 詳細　</span>
      <%= link_to "編集する", edit_family_path, class:"btn btn-success ml-1"%>
      <%= link_to "メンバー招待", new_invitation_path, class: "btn btn-primary ml-1" %>
  </h2>

  <div class="row">
    <div class="container mt-5">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">画像</th>
            <th scope="col">メンバー名</th>

          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image, size:"25x25" %></td>
              <td><%= user.nickname %></td>

            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>

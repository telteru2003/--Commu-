<div class="container">
  <h2 style="padding: 10px; margin: 10px;" class="font-weight-bold my-5">
    <span style="background-color: #EEEEEE">　<%= @family.name %> 　承認待ち一覧　</span>
  </h2>

  <div class="row mt-5">
    <div class="col-11 col-md-12 mx-auto">
    <% if @memberships.present? %>
      <div class="table-responsive">
        <table class="table table-hover text-nowrap bg-light">
          <thead class="thead-dark">
            <tr>
              <th>プロフィール画像</th>
              <th>名前</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @memberships.each do |membership| %>
              <tr>
                <td><%= image_tag membership.user.get_profile_image, size:"25x25" %></td>
                <td><%= membership.user.name %></td>
                <td class="text-right">
                  <%= link_to '加入許可', family_family_users_path(@family, membership_id: membership.id), method: :post, class: "btn btn-sm btn-success" %>
                  <%= link_to '拒否', family_family_users_path(@family, membership_id: membership.id), method: :delete, class: "btn btn-sm btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p>承認待ちユーザーはいません。</p>
    <% end %>
    </div>
    <div class="mx-auto mt-5"><%= paginate @memberships %></div>
  </div>

  <div class="row mt-5">
    <div class="col-md-10 mx-auto">
      <p><%= link_to "戻る", family_path(@family), class:"btn btn-success mr-5" %></p>
    </div>
  </div>

</div>

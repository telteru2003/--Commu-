<div class="container">
  <h2 style="padding: 10px; margin: 10px;" class="font-weight-bold my-5">
    <span style="background-color: #EEEEEE">　<%= @food.name %> 編集　</span>
  </h2>
  <p class="mr-5 font-weight-bold"><%= image_tag @food.get_foods_image, size:"100x100" %></p>

  <div class="row">
    <div class="d-flex align-items-center">

      <%= form_with model: @food, url: food_path(@food), method: :patch, local: true do |f| %>
        <table class="table">
          <tbody>
            <tr>
              <td class="col-md-5" style="background-color: #EEEEEE"><%= f.label :"JANコード（任意）", class: 'form-label' %></td>
              <td class="col-md-7"><%= f.text_field :jan_code, class: 'form-control' %></td>
            </tr>
            <tr>
              <td class="col-md-5" style="background-color: #EEEEEE"><%= f.label :"食品類：名称", class: 'form-label' %></td>
              <td class="col-md-7"><%= f.text_field :name, class: 'form-control' %></td>
            </tr>
            <tr>
              <td class="col-md-5" style="background-color: #EEEEEE"><%= f.label :"ジャンル（任意）", class: 'form-label' %></td>
              <td class="col-md-7"><%= f.select :genre, Food.genres.keys, { include_blank: '選択してください' }, class: 'form-select' %></td>
            </tr>
            <tr>
              <td class="col-md-5" style="background-color: #EEEEEE"><%= f.label :"保管場所", class: 'form-label' %></td>
              <td class="col-md-7"><%= f.collection_select :place_id, @places, :id, :name, { include_blank: '選択してください' }, { class: 'form-select' } %></td>
            </tr>
            <tr>
              <td class="col-md-5" style="background-color: #EEEEEE"><%= f.label :"ステータス", class: 'form-label' %></td>
              <td class="col-md-7"><%= f.select :consume_status, Food.consume_statuses.keys, { include_blank: '選択してください' }, class: 'form-select' %></td>
            </tr>
          </tbody>
        </table>
        <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
      <% end %>

    </div>
  </div>



<div class="container">
  <h2 style="padding: 10px; margin: 10px;" class="font-weight-bold my-5">
    <span style="background-color: #EEEEEE">　<%= @food.name %>　</span>
    <%= link_to "編集", edit_food_path(@food), class:"btn btn-success ml-1"%>
  </h2>

  <div class="row">
    <div class="d-flex align-items-center">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td class="mr-5 font-weight-bold" rowspan="2">
              <%= image_tag @food.get_foods_image, size: "100x", class: "img-fluid" %>
            </td>
            <td>
              いいねされた数：<%= @food.likes_count %>　　　コメント数：<%= @food.comments.count %>
            </td>
          </tr>
          <tr>
            <td>
              <%= render 'public/comments/form' %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <table class="table">
      <tbody>
        <tr>
          <td class="col-md-2" style="background-color: #EEEEEE">JANコード</td>
          <td class="col-md-7 <%= @food.jan_code.present? ? '' : 'gray-text' %>">
            <%= @food.jan_code.present? ? @food.jan_code : "未入力" %>
          </td>
        </tr>
        <tr>
          <td class="col-md-2" style="background-color: #EEEEEE">投稿者</td>
          <td class="col-md-7"><%= @food.user.nickname.present? ? @food.user.nickname : @food.user.name %></td>
        </tr>
        <tr>
          <td class="col-md-2" style="background-color: #EEEEEE">食品類：名称</td>
          <td class="col-md-7"><%= @food.name %></td>
        </tr>
        <tr>
          <td class="col-md-2" style="background-color: #EEEEEE">ジャンル</td>
          <td class="col-md-7"><%= @food.genre %></td>
        </tr>
        <tr>
          <td class="col-md-2" style="background-color: #EEEEEE">保管場所</td>
          <td class="col-md-7 <%= @food.place&.name.present? ? '' : 'gray-text' %>">
            <%= @food.place&.name.present? ? @food.place.name : "未入力" %>
          </td>
        </tr>
        <tr>
          <td class="col-md-2" style="background-color: #EEEEEE">賞味期限 / 消費期限</td>
          <td class="col-md-7"><%= @food.expiration_date.strftime("%Y年%m月%d日") %></td>
        </tr>
        <tr>
          <td class="col-md-2" style="background-color: #EEEEEE">消費状況</td>
          <td class="col-md-7"><%= @food.consume_status %></td>
        </tr>
      </tbody>
    </table>

  </div>
</div>

<%= render 'public/comments/index' %>
<div class="container">
  <h2 style="padding: 10px; margin: 10px;" class="font-weight-bold my-5"><span style="background-color: #EEEEEE">　新しい食品を投稿する　</span></h2>
  <div class="row">

  <%= form_with(model: @food, url: foods_path, method: :post, class: 'mt-4') do |form| %>

    <div class="mb-3">
      <%= form.label :"食品類画像", class: "col-4" %>
      <%= form.file_field :image, accept: "image/*" %>
    </div>

    <div class="mb-3">
      <%= form.label :"JANコード（任意）", class: 'form-label' %>
      <%= form.text_field :jan_code, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :"食品類：名称", class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
      <% if @food.errors.has_key?(:name) %>
        <p class="text-danger"><%= @food.errors[:name].first %></p>
      <% end %>
    </div>

    <div class="mb-3">
      <%= form.label :"保管場所（任意）", class: 'form-label' %>
      <%= form.collection_select :place_id, @places || [], :id, :name, { include_blank: '選択してください' }, { class: 'form-select' } %>
    </div>

    <div class="mb-3">
      <%= form.label :"ジャンル（任意）", class: 'form-label' %>
      <%= form.select :genre, Food.genres.keys, { include_blank: '選択してください' }, class: 'form-select' %>
    </div>

    <div class="mb-3">
      <%= form.label :"賞味期限 / 消費期限", class: 'form-label' %>
      <%= form.date_field :expiration_date, class: 'form-control' %>
    </div>

    <%= form.submit "投稿する", class: 'btn btn-primary' %>
  <% end %>
</div>
